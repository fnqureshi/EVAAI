<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:userCardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="3dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/user_card_view"
    userCardView:cardBackgroundColor="@color/cardview_light_background"
    userCardView:contentPadding="5dp"
    userCardView:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/userCardLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1sp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="12sp"
            android:layout_below="@+id/imageView" />
    </RelativeLayout>
</android.support.v7.widget.CardView>