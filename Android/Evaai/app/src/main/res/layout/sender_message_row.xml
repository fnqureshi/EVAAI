<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/senderAvatar"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/creatorId"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/senderAvatar"
        android:layout_alignTop="@+id/senderAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:textSize="14dp"
        android:text="Creator Name"/>

    <TextView
        android:id="@+id/senderMessageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/LightSlateGray"
        android:text="Date"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/creatorId" />

    <TextView
        android:id="@+id/senderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creatorId"
        android:layout_alignLeft="@+id/creatorId"
        android:background="@drawable/sender_chat_bubble"
        android:padding="10dp"
        android:elevation="2dp"
        android:textSize="18dp"
        android:text="How are you doing? This is a test message for the sender chat bubble."  />

</RelativeLayout>
