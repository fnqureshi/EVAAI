<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="#8800F2" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
    	android:gravity="fill_horizontal"
		android:background="#eee">

		<Button
			style="@style/backButton" />

		<ImageView
	        android:id="@+id/icon"
	        android:layout_width="32sp"
	        android:layout_height="32sp"
	        android:layout_margin="4sp"
	        android:background="@drawable/icon" />
	    
		<TextView
		    android:id="@+id/title"
	        android:layout_width="0px"
	        android:layout_weight="1"
			android:layout_height="wrap_content"
            android:textSize="18sp"
	        android:layout_margin="8sp"
			android:text="Menu"/>
		
	</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
		android:background="#ddd">
    </View>

	<LinearLayout
		android:id="@+id/menuBar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16sp"
		android:layout_marginBottom="16sp"
		android:layout_marginLeft="4sp"
		android:layout_marginRight="4sp"
		android:orientation="horizontal"
		android:background="@drawable/menu_command_toggle"
		android:layout_gravity="center">

		<TextView
			android:layout_width="120sp"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:textSize="18sp"
			android:layout_margin="8sp"
			android:padding="8sp"
			android:background="@drawable/menu_toggle"
			android:textAlignment="center"
			android:text="Menu"/>

		<TextView
			android:layout_width="120sp"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:layout_margin="8sp"
			android:padding="8sp"
			android:textAlignment="center"
			android:onClick="selectCommand"
			android:text="Command"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/commandBar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16sp"
		android:layout_marginBottom="16sp"
		android:layout_marginLeft="4sp"
		android:layout_marginRight="4sp"
		android:orientation="horizontal"
		android:background="@drawable/menu_command_toggle"
		android:layout_gravity="center"
		android:visibility="gone">

		<TextView
			android:layout_width="120sp"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:layout_margin="8sp"
			android:padding="8sp"
			android:textAlignment="center"
			android:onClick="selectMenu"
			android:text="Menu"/>

		<TextView
			android:layout_width="120sp"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:textSize="18sp"
			android:layout_margin="8sp"
			android:padding="8sp"
			android:textAlignment="center"
			android:background="@drawable/menu_toggle"
			android:text="Command"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/menuItems"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="16sp"
		android:layout_marginBottom="16sp"
		android:layout_marginLeft="4sp"
		android:layout_marginRight="4sp"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center">

			<LinearLayout
				style="@style/menuLayout">
				<LinearLayout
					style="@style/menuLayout2">
					<ImageView
						style="@style/menuIcon"
						android:background="@drawable/speak"
						android:onClick="speak"/>
				</LinearLayout>
				<TextView
					style="@style/menuText"
					android:text="Speak"/>
			</LinearLayout>

			<LinearLayout
				style="@style/menuLayout">
				<LinearLayout
					style="@style/menuLayout2">
					<ImageView
						style="@style/menuIcon"
						android:background="@drawable/device_voice"
						android:onClick="deviceVoice" />
				</LinearLayout>
				<TextView
					style="@style/menuText"
					android:text="Device Voice"/>
			</LinearLayout>

			<LinearLayout
				style="@style/menuLayout">
				<LinearLayout
					style="@style/menuLayout2">
					<ImageView
						style="@style/menuIcon"
						android:background="@drawable/change_voice"
						android:onClick="changeVoice" />
				</LinearLayout>
				<TextView
					style="@style/menuText"
					android:text="Change Voice"/>
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/commandItems"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="16sp"
		android:layout_marginBottom="16sp"
		android:layout_marginLeft="4sp"
		android:layout_marginRight="4sp"
		android:orientation="vertical"
		android:visibility="gone">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center">

			<LinearLayout
				style="@style/menuLayout">
				<LinearLayout
					style="@style/menuLayout2">
					<ImageView
						style="@style/menuIcon"
						android:background="@drawable/speak"
						android:onClick="speak"/>
				</LinearLayout>
				<TextView
					style="@style/menuText"
					android:text="Observe my\nthoughts"/>
			</LinearLayout>

			<LinearLayout
				style="@style/menuLayout">
				<LinearLayout
					style="@style/menuLayout2">
					<ImageView
						style="@style/menuIcon"
						android:background="@drawable/device_voice"
						android:onClick="deviceVoice" />
				</LinearLayout>
				<TextView
					style="@style/menuText"
					android:text="Create Sound\nScapes"/>
			</LinearLayout>

			<LinearLayout
				style="@style/menuLayout">
				<LinearLayout
					style="@style/menuLayout2">
					<ImageView
						style="@style/menuIcon"
						android:background="@drawable/change_voice"
						android:onClick="changeVoice" />
				</LinearLayout>
				<TextView
					style="@style/menuText"
					android:text="Pomodoro"/>
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>